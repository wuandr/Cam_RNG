<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="24dp">

    <LinearLayout
        android:id="@+id/landingContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/landingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/text_high_contrast"
            android:textSize="28sp" />

        <Button
            android:id="@+id/startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/start_flip"
            android:textColor="@color/text_high_contrast" />

        <Button
            android:id="@+id/luckyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/start_lucky_numbers"
            android:textColor="@color/text_high_contrast" />
    </LinearLayout>

    <TextView
        android:id="@+id/kofiPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kofi_prompt"
        android:textAlignment="center"
        android:textColor="@color/text_high_contrast"
        android:textSize="14sp" />

    <Button
        android:id="@+id/kofiButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/kofi_button"
        android:textColor="@color/text_high_contrast" />
</LinearLayout>
