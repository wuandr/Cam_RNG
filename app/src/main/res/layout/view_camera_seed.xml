<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status_ready"
        android:textColor="@color/text_high_contrast"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/digitsRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/digitsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lucky_numbers_digits_label"
            android:textColor="@color/text_high_contrast"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/digitsInput"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ems="4"
            android:hint="@string/lucky_numbers_hint"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@color/text_high_contrast"
            android:textColorHint="@color/text_hint_contrast" />

        <TextView
            android:id="@+id/resultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/text_high_contrast"
            android:textSize="26sp"
            android:visibility="gone" />
    
    </LinearLayout>

    <ImageView
        android:id="@+id/framePreview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:contentDescription="@string/frame_preview_desc"
        android:scaleType="fitCenter" />

    <Button
        android:id="@+id/actionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/flip_button"
        android:textColor="@color/text_high_contrast" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/save_button"
        android:textColor="@color/text_high_contrast"
        android:visibility="gone" />
</LinearLayout>
